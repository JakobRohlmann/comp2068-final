<% include ../partials/header %>

<section>
  <div>
    <a href="/books/new" class="btn btn-primary">
      New Book
    </a>
  </div>

  <div class="row">

    <% for ( let book of books ) { %>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              Title: <%= book.title %>
            </h5>

            <p>
              Description: <%= book.description %>
            </p>

            <p>
              Author: <%= book.author %>
            </p>

            <p>
              Price: $<%= book.price %>
            </p>


            <div class="actions">
              <a href="/books/<%= book.id %>" class="btn btn-primary">
                Show
              </a>

              <a href="/books/<%= book.id %>/edit" class="btn btn-primary">
                Edit
              </a>

              <form action="/books/<%= book.id %>/delete" method="post"  onsubmit="return confirm('Are you sure you wish to delete this book from the records?');">
                <input type="hidden" name="id" value="<%= book.id %>">
                <button type="submit" class="btn btn-primary">DELETE</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% } %>

  </div>
</section>

<% include ../partials/footer %>
